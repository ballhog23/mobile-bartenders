{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "./dist",
		"rootDir": "./",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": [
		"server/**/*",
		"shared/**/*"
	],
	"exclude": [
		"node_modules",
		"dist",
		"public",
		"public-ts"
	]
}