{
  "name": "mobile-bartenders",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "build:server": "tsc -p tsconfig.json",
    "build:client": "tsc -p tsconfig.web.json --noEmit && esbuild public-ts/*.ts --bundle --minify --outdir=public/js --format=esm",
    "build:scss": "sass public/scss:public/css --no-source-map --style=compressed",
    "watch:client": "esbuild public-ts/*.ts --bundle --outdir=public/js --format=esm --watch=forever",
    "watch:scss": "sass public/scss:public/css --watch --no-source-map",
    "build": "npm run build:server && npm run build:client && npm run build:scss",
    "dev": "npm run build:server && concurrently \"tsc -p tsconfig.json --watch\" \"npm run watch:client\" \"npm run watch:scss\" \"node --watch dist/server.js\"",
    "start": "node dist/server.js",
    "prod": "pm2 dist/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "compression": "^1.8.0",
    "express": "^5.1.0",
    "stripe": "^18.2.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.6",
    "@types/node": "^25.3.0",
    "@types/validator": "^13.15.10",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.3",
    "sass": "^1.97.3",
    "typescript": "^5.9.3"
  }
}
