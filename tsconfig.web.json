{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": [
    "public-ts/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "server",
    "public"
  ]
}